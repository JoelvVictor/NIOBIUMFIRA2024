#include <Wire.h>
#include <DC_motor_controller.h>
#include <SparkFun_APDS9960.h>

DC_motor_controller motDireita, motEsquerda;
SparkFun_APDS9960 apds = SparkFun_APDS9960();

// variaveis do apds9960
uint16_t ambiente = 0;
uint16_t vermelho = 0;
uint16_t verde = 0;
uint16_t azul = 0;

// funções chamadas nos pinos interrupção
void interrupt_motEsquerda() {
  motEsquerda.isr(); }
void interrupt_motDireita() {
  motDireita.isr(); }

void setup() {
  Serial.begin(9600);
  setmotD();
  setmotE();
  initapds();
}

void loop(){
  for (int i = 0; i <4; i++) {
    motEsquerda.walk(255, 3);
    motDireita.walk(255, 3);
    delay(5000);
    motEsquerda.stop(2000);
  }
}
