// MOTOR DIREITO pinout
int in1Direito = 9;
int in2Direito = 10;
int ENA_direito = 0;
int ENB_direito = 0;
// comunicação encoder
int canalA_direito = 3;
int canalB_direito = 7;

// função para definir os pinos do motor direito
void setmotD() {
  // pinos da ponte H (IN1-3, IN2-4, ENB-ENA)
  motDireita.hBridge(in1Direito, in2Direito, ENA_direito);
  // pinos Encoder [canal A (interrupção), canal B]
  motDireita.setEncoderPin(canalA_direito, canalB_direito);
  // habilitar interrupções
  attachInterrupt(digitalPinToInterrupt(canalA_direito), interrupt_motDireita, FALLING);
  // redução
  motDireita.setRR(21.3);
  // definição dos pinos como OUTPUT e INPUT
  motDireita.setPins();
}
